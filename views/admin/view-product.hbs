<section>
    <div class="container">
        <div class="row">
            <a href="/admin/add-product" class="btn btn-success ml-auto mt-2">Add Product</a>
        </div>
<table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Image</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td style="width:20%">{{this.Name}}</td>
      <td>{{this.category}}</td>
      <td><img style="width: 50px ; height: 50px" src="/product-images/{{this._id}}.jpg"></td>
      <td>{{this.description}}</td>
      <td><a href="/admin/edit-product" class="btn btn-primary">Edit</a></td>  
      <td><a href="/admin/delete-product" class="btn btn-danger">Delete</a></td>
      
      
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>