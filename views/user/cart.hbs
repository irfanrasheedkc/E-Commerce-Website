<style>
    {{!-- .card {
        overflow: hidden;
    } --}}

    .card-img-top {
        width: 100%;
        height: 15vw;
        object-fit: cover;
    }

    #div {
        display: block;
    }

</style>
<section>
    <h2>Cart</h2>
    <div class="container mt-5 p-3">
        <div class="row">
            {{#each products}}
            <div class="col-xs-12 col-sm-6 col-md-3 card-img-top " style="margin-bottom:12em">
                <div class="card card-custom mx-2 mb-3" style="width: 15rem; height:22rem ; ">
                    <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt=" Card image cap"
                        style="height:15rem;width:12rem">
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        {{!-- <a href="/add-to-cart/?id={{this._id}}" class="btn btn-primary">Add to cart</a> --}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>