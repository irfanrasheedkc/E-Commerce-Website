<form action="/signup" method="post" enctype="multipart/form-data">
    <div class="container" style="margin:auto ; width:30%">
        <h3 align="center">Signup</h3>
        <div class="form-group">
            <label for="">Name</label>
            <input type="text" name="Username" class="form-control" id="exampleFormControlInput1" placeholder="Name">
        </div>
        <div class="form-group">
            <label for="">Email address</label>
            <input type="email" name="Email" class="form-control" id="exampleFormControlInput1"
                placeholder="Email">
        </div>
        <div class="form-group">
            <label for="">Password</label>
            <input type="password" name="Password" class="form-control" id="exampleFormControlInput1"
                placeholder="Password">
        </div>
        <a href = "/login">Already have an acoount?</a><br><br>
        <button class="btn btn-primary" style="margin:auto;width:100%" type="submit">Signup</button>
    </div>
</form>