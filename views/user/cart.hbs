<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr style="text-align: center;vertical-align: middle">
                    <th scope="col">No</th>
                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Quantity</th>
                    {{!-- <th scope="col"></th> --}}
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr style="height:75px;text-align: center;vertical-align: middle">
                    <td>{{@index}}</td>
                    <td scope="row">
                        <img src='/product-images/{{this._id}}.jpg' style="height:75px;weight:auto">
                    </td>
                    <td style="width:20%">{{this.Name}}</td>
                    <td><button>-</button>1<button>+</button></td>
                    <td><a href="" class="btn btn-primary">Delete</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>