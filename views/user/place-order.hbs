<style>
    .column {
        float: left;
        width: 50%;
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    .div2 {
        padding-top: 30px;
        padding-right: 30px;
        padding-bottom: 70px;
        padding-left: 30px;
    }
</style>
<form method="post" id="checkout-form">
<div class="row">
    <div class="column mt-5">
        <div class="container" style="margin:auto ; width:70%">
            <h3 align="center">Enter Address Details</h3>
            <div class="form-group">
                <label for="">Address</label>
                <input type="text" name="address" class="form-control" id="address" placeholder="address">
            </div>
            <div class="form-group">
                <label for="">Pincode</label>
                <input type="text" pattern="[0-9]{6}" maxlength="6" name="pincode" class="form-control"
                    id="pincode" placeholder="Pincode">
            </div>
            <div class="form-group">
                <label for="">Mobile</label>
                <input type="tel" name="mobile" class="form-control" id="mobile"
                    placeholder="Mobile Number">
                <input type="text" name="userId" id="" value="{{user._id}}" hidden>
            </div>
        </div>

    </div> 
    <div class="column mt-5">
        <div style="max-width:50%; border:1px solid black;" align="left" class="div2">
            <h6><b>Total Price: <span>&#8377;</span>{{total}}/-</b></h6>
            <br>
            <hr>
            <p>Please select payment method:</p>
              <input type="radio" id="cod" name="payment_method" value="cod">
              <label for="html">Cash On Delivery</label><br>
              <input type="radio" id="online" name="payment_method" value="online">
              <label for="css">Online Payment</label><br>
            <button class="btn btn-primary float-right" type="submit">Checkout</button>
        </div>
    </div>
</div>
</form>
<script>
    $("#checkout-form").submit((e)=>{
        e.preventDefault()
        $.ajax({
            url:'/place-order',
            method:'post',
            data:$('#checkout-form').serialize(),
            success:(response){
                alert(response)
            }
        })
    })
</script>